<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/naranja</item>
        <item name="colorPrimaryDark">@color/beige</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextoUserProfile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/common_google_signin_btn_text_dark_focused</item>
        <item name="android:textSize">18sp</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="boton_login_and_registro">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@drawable/button_sign_up_login</item>
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TarjetaEventos" parent="Base.Theme.AppCompat.Light.DarkActionBar">


    </style>

</resources>
