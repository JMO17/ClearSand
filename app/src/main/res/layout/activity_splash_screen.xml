<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreenActivity"
    android:background="#F1E9C0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/arena"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivLogoSplashScreen"
            android:layout_width="@dimen/l_widht_logo"
            android:layout_height="@dimen/l_height_logo"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@mipmap/ic_launcher"
            android:paddingBottom="@dimen/padding_img_splash_scrn" />

        <TextView
            android:id="@+id/txtNombreSplashScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/paddin_top_clear"
            android:text="@string/txt_clear_sand_splash_creen"
            android:textSize="60sp"
            app:fontFamily="@font/bromello" />
    </LinearLayout>
</RelativeLayout>