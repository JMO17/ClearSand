<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityInicio">


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/nav_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/navigation" />

    <LinearLayout
        android:id="@+id/llvBusqueda"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/beige"
        android:orientation="vertical"
        android:padding="@dimen/padding_busqueda">

        <EditText
            android:id="@+id/etBusqueda"
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_border"
            android:drawableLeft="@drawable/ic_lupa"
            android:drawablePadding="@dimen/padding_et_image"
            android:ems="10"
            android:hint="@string/hint_busqueda"
            android:inputType="textPersonName"
            android:padding="@dimen/padding_et_busqueda"
            app:fontFamily="@font/roboto_thin" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvEventosCerca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="125dp"
        android:text="@string/tv_eventos_cerca"
        android:textSize="30sp"
        app:fontFamily="@font/roboto_bold"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="19dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rlEventosCerca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="189dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp" />

</RelativeLayout>