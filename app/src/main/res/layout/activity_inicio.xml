<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityInicio">


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation">

    </android.support.design.widget.BottomNavigationView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/beige"
        android:orientation="vertical"
        android:padding="@dimen/padding_busqueda"
        android:layout_alignParentLeft="true">

        <EditText
            android:id="@+id/etBusqueda"
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_border"
            android:drawableLeft="@drawable/ic_lupa"
            android:drawablePadding="@dimen/padding_et_image"
            android:ems="10"
            android:hint="@string/hint_busqueda"
            android:inputType="textPersonName"
            android:padding="@dimen/padding_et_busqueda"
            app:fontFamily="@font/roboto_thin" />
    </LinearLayout>

</RelativeLayout>